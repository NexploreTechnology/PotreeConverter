    "version": "0.2.0",
    "configurations": [
        {
            "name": "Site_LAZ",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/PotreeConverter/PotreeConverter_NGP",
            "args": ["/mnt/c/Datasets/Nexplore/site.las", "-o", 
                     "/mnt/c/Datasets/Nexplore/potreeNGP_site_LAZ/", 
                     "--output-format", "LAZ", 
                     "--overwrite"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },

